<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        CARRITO | Funkoshop
    </title>
    <link rel="stylesheet" href="../css/index.css">
</head>

<body>

    <%- include('../partials/header.ejs') %>

        <section class="container">
            <div class="container__table">
                <div class="table__titulo">
                    <h2 class="table__titulo--">CARRITO DE COMPRAS</h2>
                </div>
                <div class="table__group">
                    <div class="table__header">DETALLE DE PRODUCTO</div>
                    <div class="table__header">CANTIDAD</div>
                    <div class="table__header">TOTAL</div>
                    <div class="table__header"></div>
                    <div class="table__item">
                        <div class="item_card">
                            <img src="../../img/multimedia/pokemon/pidgeotto-1.webp" alt="">
                            <div class="item_card_info">
                                <h4 class="item_card_nombre">PIDGEOTTO</h4>
                                <p class="item_card_licencia">POKEMON</p>
                                <br>
                                <p class="item_card_precio">Precio unitario: $ 1799,99</p>
                            </div>
                        </div>
                    </div>
                    <div class="table__item">
                        <form class="item__cart" action="#" method="POST" enctype="application/x-www-form-urlencoded">
                            <input id="quantity1" class="item__input" type="text" name="quantity" placeholder="0"
                                disabled>
                            <div>

                                <button onclick="addquantity('quantity1')" id="add" class="item__quantity_tabla"
                                    type="button">+</button>
                                <button onclick="subtractquantity('quantity1')" id="subtract"
                                    class="item__quantity_tabla" type="button">-</button>
                            </div>

                        </form>
                    </div>
                    <div class="table__item">
                        <p id="quantity1Total" class="item_precio">$ 0,00</p>
                    </div>
                    <div class="table__item">
                        <a href="" class="item_compra"><iconify-icon
                                icon="material-symbols:cancel-outline-rounded"></iconify-icon></a>
                    </div>


                    <div class="table__item">
                        <div class="item_card">
                            <img src="../../img/multimedia/star-wars/baby-yoda-1.webp" alt="">
                            <div class="item_card_info">
                                <h4 class="item_card_nombre">BABY YODA BLUEBALL </h4>
                                <p class="item_card_licencia">STAR WARS</p>
                                <br>
                                <p class="item_card_precio">Precio unitario: $ 1799,99</p>
                            </div>
                        </div>
                    </div>
                    <div class="table__item">
                        <form class="item__cart" action="#" method="POST" enctype="application/x-www-form-urlencoded">
                            <input id="quantity2" class="item__input" type="text" name="quantity" placeholder="0"
                                disabled>
                            <div>

                                <button onclick="addquantity('quantity2')" id="add" class="item__quantity_tabla"
                                    type="button">+</button>
                                <button onclick="subtractquantity('quantity2')" id="subtract"
                                    class="item__quantity_tabla" type="button">-</button>
                            </div>

                        </form>
                    </div>
                    <div class="table__item">
                        <p id="quantity2Total" class="item_precio">$ 0,00</p>
                    </div>
                    <div class="table__item">
                        <a href="" class="item_compra"><iconify-icon
                                icon="material-symbols:cancel-outline-rounded"></iconify-icon></a>
                    </div>

                </div>
            </div>
        </section>
        <section class="container resumen">
            <h2 class="resumen__titulo">RESUMEN</h2>
            <article class="resumen__container">
                <div class="resumen__cantidad">
                    <p>cantidad de elementos </p>
                    <p id="cantProd"> </p>
                </div>
                <div class="resumen__subtotal">
                    <p>subtotal</p>
                    <p id="subTotal"></p>
                </div>
                <div class="resumen__envio">
                    <p>envio</p>
                    <p>$0</p>
                </div>
                <div class="resumen__total">
                    <p class="resumen__total__titulo">total</p>
                    <p id="totalAPagar"></p>
                </div>
            </article>
            <div class="pagar">
                <button id="btnPagar">ir a pagar</button>
            </div>
        </section>

        <%- include('../partials/footer.ejs') %>


            <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
            <script src="../../js/carrito.js"></script>

</body>

</html>